<Window x:Class="PharmY.Hospital"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PharmY"
        mc:Ignorable="d"
        Title="Hospital" Height="350" Width="525" WindowStartupLocation="CenterScreen" WindowState="Maximized">
    <Grid>
        <Label x:Name="lblbarcode" Content="Barcode" HorizontalAlignment="Left" Margin="33,98,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="edtbarcode" HorizontalAlignment="Left" Height="23" Margin="120,101,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <ComboBox HorizontalAlignment="Left" Margin="128,54,0,0" VerticalAlignment="Top" Width="87" SelectionChanged="ComboBox_SelectionChanged"/>
        <DatePicker x:Name="DateHospital" HorizontalAlignment="Left" Margin="41,15,0,0" VerticalAlignment="Top"/>
        <Label Content="Active Ingridient" HorizontalAlignment="Left" Margin="10,138,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="edtactiveingridient" HorizontalAlignment="Left" Height="23" Margin="120,138,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label Content="Quantity" HorizontalAlignment="Left" Margin="22,169,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="edtquantity" HorizontalAlignment="Left" Height="23" Margin="120,172,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label Content="out where" HorizontalAlignment="Left" Margin="27,54,0,0" VerticalAlignment="Top"/>
        <Button Content="Back to main" HorizontalAlignment="Left" Margin="308,249,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>
        <Button x:Name="btnaddhospital" Content="Add script" HorizontalAlignment="Left" Margin="109,249,0,0" VerticalAlignment="Top" Width="75"/>
        <ListBox HorizontalAlignment="Left" Height="117" Margin="320,81,0,0" VerticalAlignment="Top" Width="165"/>
        <Label x:Name="lbllist" Content="List of items to go out" HorizontalAlignment="Left" Margin="336,50,0,0" VerticalAlignment="Top"/>
        <CheckBox x:Name="chchecked" Content="Checked" HorizontalAlignment="Left" Margin="99,217,0,0" VerticalAlignment="Top"/>
    </Grid>
</Window>
