<Window x:Class="PharmY.Window3"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PharmY"
        mc:Ignorable="d"
        Title="Add barcode" Height="300" Width="300" WindowStartupLocation="CenterScreen" WindowState="Maximized">
    <Grid x:Name="Add_barcode">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="115*"/>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition Width="177*"/>
        </Grid.ColumnDefinitions>
        <Label x:Name="lbladdbarcode" Content="Add Barcode" HorizontalAlignment="Left" Margin="10,21,0,0" VerticalAlignment="Top" Height="25" Width="82"/>
        <TextBox x:Name="edtaddbarcode" Grid.ColumnSpan="3" HorizontalAlignment="Left" Height="22" Margin="92,24,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label Content="Name" HorizontalAlignment="Left" Margin="10,57,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="edtname" Grid.ColumnSpan="3" HorizontalAlignment="Left" Height="23" Margin="92,60,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label x:Name="lblQuantity" Content="Quantity" HorizontalAlignment="Left" Margin="17,88,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="edtquantity" Grid.ColumnSpan="3" HorizontalAlignment="Left" Height="22" Margin="92,92,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="btnadd" Content="Add" HorizontalAlignment="Left" Margin="30,142,0,0" VerticalAlignment="Top" Width="75"/>
        <Button x:Name="btnbacktoadmin" Content="Back to Admin" Grid.Column="2" HorizontalAlignment="Left" Margin="69,137,0,0" VerticalAlignment="Top" Width="98" Click="Button_Click"/>

    </Grid>
</Window>
