        <TextBox x:Name="edtactivename" Grid.Column="1" HorizontalAlignment="Center" Height="75" Margin="516,160,484,452" TextWrapping="Wrap" VerticalAlignment="Center" Width="350" FontFamily="Arial" FontSize="36" Background="#FF98E899" Foreground="#FF3D4E3F" BorderBrush="#FF61C846"/>
        <TextBox x:Name="edtbarcode" Grid.Column="1" HorizontalAlignment="Center" Height="76" Margin="516,284,484,327" TextWrapping="Wrap" VerticalAlignment="Center" Width="350" FontFamily="Arial" FontSize="36" Background="#FF98E899" Foreground="#FF3D4E3F" BorderBrush="#FF61C846"/>
        <Button x:Name="btnaddactive" Content="Add Active" Grid.Column="1" HorizontalAlignment="Center" Margin="712,443,288,168" VerticalAlignment="Center" Width="350" Height="76" Click="btnaddactive_Click" FontFamily="Arial" FontSize="18" Background="#FF98E899" Foreground="#FF3D4E3F" BorderBrush="#FF61C846"/>



    </Grid>
</Window>
